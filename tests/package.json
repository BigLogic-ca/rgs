{
  "name": "tests",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "cd .. && eslint --config tests/eslint/eslint.config.mjs .",
    "lint:fix": "cd .. && eslint --config tests/eslint/eslint.config.mjs . --fix",
    "jest": "cd .. && jest --config tests/jest/jest.config.ts",
    "tsc": "cd .. && tsc -b tsconfig.json",
    "type-check": "cd .. && tsc --noEmit",
    "test": "npm run jest",
    "test:watch": "npm run jest -- --watch",
    "test:e2e": "playwright test --config playwright/playwright.config.ts",
    "test:all": "npm run lint && npm run test && npm run test:e2e",
    "pw": "cd .. && playwright test --config tests/playwright/playwright.config.ts",
    "pw:report": "playwright show-report playwright/reports",
    "pw:ui": "playwright test --config playwright/playwright.config.ts --ui"
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "9.17.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "globals": "15.14.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "verbatimModuleSyntax": false
    }
  }
}
